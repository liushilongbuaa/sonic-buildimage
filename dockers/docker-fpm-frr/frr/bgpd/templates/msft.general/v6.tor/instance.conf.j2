!
! template: bgpd/templates/msft.general/v6.tor/instance.conf.j2
!
  neighbor {{ neighbor_addr }} remote-as {{ bgp_session['asn'] }}
  neighbor {{ neighbor_addr }} description {{ bgp_session['name'] }}
  neighbor {{ neighbor_addr }} peer-group TIER1_V6
!
{% if is_storage_device == "false" or "BackEnd" not in device_type %}
{% if CONFIG_DB__BGP_BBR['status'] == 'enabled' %}
address-family ipv6 unicast
  neighbor {{ neighbor_addr }} allowas-in 1
exit-address-family
{% endif %}
{% endif %}
!
{% if need_to_set_timers %}
{# neighbor {{ neighbor_addr }} timers {{ bgp_session['keepalive'] }} {{ bgp_session['holdtime'] }} #}
{% endif %}
!
{% if need_to_shutdown %}
  neighbor {{ neighbor_addr }} shutdown
{% endif %}
!
! end of template: bgpd/templates/msft.general/v6.tor/instance.conf.j2
!
